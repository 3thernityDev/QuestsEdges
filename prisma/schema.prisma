generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum ChallengeType {
  hebdo
  player
  special
}

enum ChallengeStatus {
  pending
  accepted
  completed
  failed
}

enum NotificationType {
  new_challenge
  accepted
  completed
  reward
  badge
}

enum Role {
  user
  admin
  moderator
}

model User {
  id                         Int                 @id @default(autoincrement())
  username                   String              @unique @db.VarChar(50)
  email                      String              @unique @db.VarChar(100)
  uuid_mc                    String              @unique @db.VarChar(36)
  role                       Role                @default(user)
  createdAt                  DateTime            @default(now())
  updatedAt                  DateTime?           @updatedAt
  last_login                 DateTime?
  total_xp                   Int                 @default(0)
  total_points               Int                 @default(0)
  total_challenges_completed Int                 @default(0)
  skin_url                   String?             @db.VarChar(255)
  challenges                 Challenges[]
  acceptedChallenges         UsersOnChallenges[]
  ChallengeProgress          ChallengeProgress[]
  badges                     userBadges[]
  notifications              Notifications[]

  @@map("users")
}

model Actions {
  id          Int              @id @default(autoincrement())
  name        String           @unique @db.VarChar(50)
  description String?          @db.LongText
  parameters  Json?
  tasks       ChallengeTasks[]

  @@map("actions")
}

model Challenges {
  id           Int                 @id @default(autoincrement())
  creatorId    Int                 @map("creator_id")
  creator      User                @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  type         ChallengeType
  status       ChallengeStatus     @default(pending)
  title        String              @db.VarChar(100)
  description  String?             @db.LongText
  createdAt    DateTime            @default(now())
  updatedAt    DateTime?           @updatedAt
  expiresAt    DateTime?
  rewardXp     Int                 @default(0)
  rewardPoints Int                 @default(0)
  rewardItem   Json?
  acceptedBy   UsersOnChallenges[]
  tasks        ChallengeTasks[]

  @@map("challenges")
}

model UsersOnChallenges {
  id          Int             @id @default(autoincrement())
  userId      Int             @map("user_id")
  challengeId Int             @map("challenge_id")
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  challenge   Challenges      @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  status      ChallengeStatus @default(accepted)
  acceptedAt  DateTime        @default(now())

  @@unique([userId, challengeId])
  @@map("users_on_challenges")
}

model ChallengeTasks {
  id          Int        @id @default(autoincrement())
  challengeId Int        @map("challenge_id")
  challenge   Challenges @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  actionId    Int        @map("action_id")
  action      Actions    @relation(fields: [actionId], references: [id], onDelete: Cascade)
  quantity    Int        @default(1)

  progress ChallengeProgress[]

  @@map("challenge_tasks")
}

model ChallengeProgress {
  id        Int            @id @default(autoincrement())
  userId    Int            @map("user_id")
  taskId    Int            @map("task_id")
  progress  Int            @default(0)
  completed Boolean        @default(false)
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      ChallengeTasks @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("challenge_progress")
}

model Badges {
  id          Int          @id @default(autoincrement())
  name        String       @unique @db.VarChar(100)
  description String?      @db.LongText
  criteria    Json
  userBadges  userBadges[]

  @@map("badges")
}

model userBadges {
  userId    Int      @map("user_id")
  badgeId   Int      @map("badge_id")
  awardedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badges   @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@id([userId, badgeId])
  @@map("user_badges")
}

model Notifications {
  id        Int              @id @default(autoincrement())
  userId    Int              @map("user_id")
  type      NotificationType
  message   String           @db.LongText
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}
