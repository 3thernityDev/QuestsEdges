{
    "name": "msp2",
    "version": "1.0.1",
    "description": "QuestsEdges API - Minecraft gaming platform",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write src/",
        "format:check": "prettier --check src/",
        "typecheck": "tsc --noEmit",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPatterns=unit",
        "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPatterns=integration",
        "ci": "npm run lint && npm run format:check && npm run typecheck && npm run test"
    },
    "dependencies": {
        "@prisma/adapter-mariadb": "^7.1.0",
        "@prisma/client": "^7.1.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mariadb": "^3.4.5",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@jest/globals": "^30.2.0",
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.11.19",
        "@types/supertest": "^6.0.3",
        "bcrypt": "^6.0.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "jest": "^30.2.0",
        "jest-mock-extended": "^4.0.0",
        "nodemon": "^3.1.11",
        "prettier": "^3.4.2",
        "prisma": "^7.1.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.4.0",
        "typescript-eslint": "^8.18.1"
    }
}